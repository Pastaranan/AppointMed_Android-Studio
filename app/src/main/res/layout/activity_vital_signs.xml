<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vital_Signs">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#00A4E9"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/backa"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fc_subject_regular"
            android:text="บันทึกค่า Vital Signs"
            android:textColor="#ffffff"
            android:textSize="30sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/bl" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:text="ความดันโลหิต" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:ems="10"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:layout_marginTop="5dp"
                        android:inputType="textPersonName"
                        android:hint="ค่าบน"
                        android:paddingLeft="10dp"
                        android:background="@drawable/bgvitalsigns" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:ems="10"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:inputType="textPersonName"
                        android:hint="ค่าล่าง"
                        android:paddingLeft="10dp"
                        android:background="@drawable/bgvitalsigns" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/wh" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:text="น้ำหนัก (Kg)" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:layout_marginTop="5dp"
                        android:inputType="textPersonName"
                        android:hint="ค่าบน"
                        android:paddingLeft="10dp"
                        android:background="@drawable/bgvitalsigns" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:text="ส่วนสูง (Cm)" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:layout_marginTop="5dp"
                        android:inputType="textPersonName"
                        android:hint="ค่าบน"
                        android:paddingLeft="10dp"
                        android:background="@drawable/bgvitalsigns" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/w" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:text="ปริมาณน้ำตาลในเลือด" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:layout_marginTop="5dp"
                        android:inputType="textPersonName"
                        android:hint="กรุณากรอกข้อมูล"
                        android:paddingLeft="10dp"
                        android:background="@drawable/bgvitalsigns" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/tem" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:text="อุณหภูมิร่างกาย (เซลเซียส)" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:layout_marginTop="5dp"
                        android:inputType="textPersonName"
                        android:hint="กรุณากรอกข้อมูล"
                        android:paddingLeft="10dp"
                        android:background="@drawable/bgvitalsigns" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/h" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:text="อัตราการเต้นของหัวใจ (PR)" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:layout_marginTop="5dp"
                        android:inputType="textPersonName"
                        android:hint="กรุณากรอกข้อมูล"
                        android:paddingLeft="10dp"
                        android:background="@drawable/bgvitalsigns" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/oh" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:text="ระดับออกซิเจนในเลือด" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:fontFamily="@font/fc_subject_regular"
                        android:textSize="17sp"
                        android:layout_marginTop="5dp"
                        android:inputType="textPersonName"
                        android:hint="กรุณากรอกข้อมูล"
                        android:paddingLeft="10dp"
                        android:background="@drawable/bgvitalsigns" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/fc_subject_regular"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/buttonvital"
                android:text="ยืนยัน"
                android:layout_marginBottom="30dp"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>