<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".popup_appointment">

    <RelativeLayout
        android:layout_width="361dp"
        android:layout_height="353dp"
        android:background="@drawable/appointment_popup_bg_new"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="182dp"
            android:layout_height="187dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="89dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="100dp"
            app:srcCompat="@drawable/appointment_popup" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fcminimalregular"
            android:text="เลือกเเบบฟอร์มใบนัด"
            android:textColor="#767171"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/new_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="65dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/fcminimalregular"
            android:text="ใบนัดใหม่"
            android:textColor="#13B2D7"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/continue_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/fcminimalregular"
            android:text="ใบนัดต่อเนื่อง"
            android:textColor="#13B2D7"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>